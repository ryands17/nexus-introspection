{
  "name": "graphql-auth",
  "license": "MIT",
  "scripts": {
    "dev": "cross-env NODE_ENV=development tsnd --no-notify --respawn --transpile-only ./src",
    "build": "tsc",
    "test": "dotenv -e .env.test -- jest --runInBand",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "debug": "tsnd --inspect --respawn --transpile-only ./src",
    "prebuild": "run-s clean generate:*",
    "lint": "eslint 'src/**/*.{js,ts}'",
    "seed": "dotenv -- ts-node prisma/seed.ts",
    "clean": "rimraf dist",
    "generate:prisma": "prisma generate",
    "generate:nexus": "ts-node --transpile-only ./src/schema",
    "db:migrate": "node-pg-migrate up -f pg.config.json",
    "prisma": "dotenv -- prisma"
  },
  "dependencies": {
    "@prisma/client": "2.30.3",
    "apollo-server": "2.25.3",
    "bcrypt": "5.0.1",
    "dotenv": "10.0.0",
    "graphql": "15.8.0",
    "graphql-middleware": "6.1.13",
    "graphql-shield": "7.5.0",
    "jsonwebtoken": "8.5.1",
    "nexus": "1.1.0"
  },
  "devDependencies": {
    "@types/bcrypt": "5.0.0",
    "@types/dotenv": "8.2.0",
    "@types/eslint": "8.2.2",
    "@types/jest": "27.4.0",
    "@types/jsonwebtoken": "8.5.6",
    "@types/node": "16.11.19",
    "@types/prettier": "2.4.2",
    "@types/rimraf": "3.0.2",
    "@typescript-eslint/eslint-plugin": "5.8.1",
    "@typescript-eslint/parser": "5.8.1",
    "cross-env": "7.0.3",
    "dotenv-cli": "4.1.1",
    "eslint": "8.6.0",
    "graphql-request": "3.7.0",
    "jest": "27.4.7",
    "jest-environment-node": "27.4.6",
    "node-pg-migrate": "6.2.1",
    "npm-run-all": "4.1.5",
    "pg": "8.7.1",
    "prettier": "2.5.1",
    "prisma": "3.7.0",
    "rimraf": "3.0.2",
    "ts-jest": "27.1.2",
    "ts-node": "10.4.0",
    "ts-node-dev": "1.1.8",
    "typescript": "4.5.4",
    "typesync": "0.8.0",
    "unique-names-generator": "4.6.0"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
}
