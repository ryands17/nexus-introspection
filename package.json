{
  "name": "graphql-auth",
  "license": "MIT",
  "scripts": {
    "dev": "cross-env NODE_ENV=development tsnd --no-notify --respawn --transpile-only ./src",
    "build": "tsc",
    "test": "dotenv -e .env.test -- jest --runInBand",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "debug": "tsnd --inspect --respawn --transpile-only ./src",
    "prebuild": "run-s clean generate:*",
    "lint": "eslint 'src/**/*.{js,ts}'",
    "seed": "dotenv -- ts-node prisma/seed.ts",
    "clean": "rimraf dist",
    "generate:prisma": "prisma generate",
    "generate:nexus": "ts-node --transpile-only ./src/schema",
    "db:migrate": "node-pg-migrate up -f pg.config.json",
    "prisma": "dotenv -- prisma"
  },
  "dependencies": {
    "@prisma/client": "2.30.3",
    "apollo-server": "2.26.1",
    "bcrypt": "5.1.0",
    "dotenv": "16.0.3",
    "graphql": "15.8.0",
    "graphql-middleware": "6.1.33",
    "graphql-shield": "7.6.5",
    "jsonwebtoken": "8.5.1",
    "nexus": "1.3.0"
  },
  "devDependencies": {
    "@types/bcrypt": "5.0.0",
    "@types/dotenv": "8.2.0",
    "@types/eslint": "8.4.10",
    "@types/jest": "28.1.8",
    "@types/jsonwebtoken": "8.5.9",
    "@types/node": "16.18.3",
    "@types/prettier": "2.7.1",
    "@types/rimraf": "3.0.2",
    "@typescript-eslint/eslint-plugin": "5.44.0",
    "@typescript-eslint/parser": "5.44.0",
    "cross-env": "7.0.3",
    "dotenv-cli": "6.0.0",
    "eslint": "8.28.0",
    "graphql-request": "5.2.0",
    "jest": "27.5.1",
    "jest-environment-node": "27.5.1",
    "node-pg-migrate": "6.2.2",
    "npm-run-all": "4.1.5",
    "pg": "8.8.0",
    "prettier": "2.8.0",
    "prisma": "3.15.2",
    "rimraf": "3.0.2",
    "ts-jest": "27.1.5",
    "ts-node": "10.9.1",
    "ts-node-dev": "2.0.0",
    "typescript": "4.9.3",
    "typesync": "0.9.2",
    "unique-names-generator": "4.7.1"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
}
