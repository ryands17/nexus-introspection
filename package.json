{
  "name": "graphql-auth",
  "license": "MIT",
  "scripts": {
    "dev": "cross-env NODE_ENV=development tsnd --no-notify --respawn --transpile-only ./src",
    "build": "tsc",
    "test": "dotenv -e .env.test -- jest --runInBand",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "debug": "tsnd --inspect --respawn --transpile-only ./src",
    "prebuild": "run-s clean generate:*",
    "lint": "eslint 'src/**/*.{js,ts}'",
    "seed": "dotenv -- ts-node prisma/seed.ts",
    "clean": "rimraf dist",
    "generate:prisma": "prisma generate",
    "generate:nexus": "ts-node --transpile-only ./src/schema",
    "db:migrate": "node-pg-migrate up -f pg.config.json",
    "prisma": "dotenv -- prisma"
  },
  "dependencies": {
    "@prisma/client": "2.20.1",
    "apollo-server": "2.22.1",
    "bcrypt": "5.0.1",
    "dotenv": "8.2.0",
    "graphql": "15.5.0",
    "graphql-middleware": "6.0.5",
    "graphql-shield": "7.5.0",
    "jsonwebtoken": "8.5.1",
    "nexus": "1.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "3.0.0",
    "@types/dotenv": "8.2.0",
    "@types/eslint": "7.2.8",
    "@types/jest": "26.0.22",
    "@types/jsonwebtoken": "8.5.1",
    "@types/node": "14.14.37",
    "@types/prettier": "2.2.3",
    "@types/rimraf": "3.0.0",
    "@typescript-eslint/eslint-plugin": "4.19.0",
    "@typescript-eslint/parser": "4.19.0",
    "cross-env": "7.0.3",
    "dotenv-cli": "4.0.0",
    "eslint": "7.23.0",
    "eslint-config-prettier": "8.1.0",
    "graphql-request": "3.4.0",
    "jest": "26.6.3",
    "jest-environment-node": "26.6.2",
    "node-pg-migrate": "5.9.0",
    "npm-run-all": "4.1.5",
    "pg": "8.5.1",
    "prettier": "2.2.1",
    "prisma": "2.19.0",
    "rimraf": "3.0.2",
    "ts-jest": "26.5.4",
    "ts-node": "9.1.1",
    "ts-node-dev": "1.1.6",
    "typescript": "4.2.3",
    "typesync": "0.8.0",
    "unique-names-generator": "4.4.0"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
}
